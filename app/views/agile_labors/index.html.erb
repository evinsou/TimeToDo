<h2>Lists </h2>
<table>
  <tr>
  <th>
    <h3>Current</h3>
  </th>
  <th>
    <h3>Backlog</h3>
  </th>
  <th>
    <h3>Icebox</h3>
  </th>
  </tr>
  <tr>
    <td>
      <div class="Current">
        <% @agile_labors.each do |agile_labor| %>
          <% if agile_labor.exec_order == 'Current' %>
            <%= render agile_labor %>
          <% end %>
        <% end %>
      </div>
    </td>
    <td>
      <div class="Backlog">
        <% @agile_labors.each do |agile_labor| %>
          <% if agile_labor.exec_order == 'Backlog' %>
            <%= render agile_labor %>
          <% end %>
        <% end %>
      </div>
    </td>
    <td>
      <div class="Icebox">
        <% @agile_labors.each do |agile_labor| %>
          <% if agile_labor.exec_order == 'Icebox' %>
            <%= render agile_labor %>
          <% end %>
        <% end %>
      </div>
    </td>
  </tr>
</table>

<% render @agile_labors %>

<%= link_to 'New agile task', new_agile_labor_path %>
