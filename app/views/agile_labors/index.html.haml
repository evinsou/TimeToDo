%h2 Lists
%table
  %tr
    %th
      %h2 Current
    %th
      %h2 Backlog
    %th
      %h2 Icebox
  %tr
    %td
      .Current
        - @agile_labors.each do |agile_labor|
          - if agile_labor.exec_order == 'Current'
            = render agile_labor
    %td
      .Backlog
        - @agile_labors.each do |agile_labor|
          - if agile_labor.exec_order == 'Backlog'
            = render agile_labor
    %td
      .Icebox
        - @agile_labors.each do |agile_labor|
          - if agile_labor.exec_order == 'Icebox'
            = render agile_labor
- render @agile_labors
= link_to 'New agile task', new_agile_labor_path
= link_to 'on top', tasks_path
