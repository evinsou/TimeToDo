<%= div_for task do %>
  <li class="<%= color_picker(have_durations(task)) %>">
    <h5>
      <%= task.body %>
      <% if task.owned_by? current_user %>
        <span class='actions'>
          <%= link_to t('general.edit'), edit_task_path(task) %>
          <%= link_to t('general.delete'), task, :confirm => 'Are you sure?',
                                                 :method => :delete,
                                                 :remote => true %>
        </span>
      <% end %>
    </h5>
    <%= task.time_for_execute %> <br />
  </li>
<% end %>

