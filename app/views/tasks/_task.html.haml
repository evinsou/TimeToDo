= div_for task do
  %li
    %h3
      = link_to task.body, task
      - if task.owned_by? current_user
        %span.actions
          = link_to t('general.edit'), edit_task_path(task)
          / < #link_to t('general.delete') "/destroy_task/#{task.id}" >
          = link_to t('general.delete'), task, :confirm => 'Are you sure?', |
            :method => :delete,                                             |
            :remote => true                                                 |
    = task.time_for_execute
